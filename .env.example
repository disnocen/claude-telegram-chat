# Telegram Bot Configuration
# Get these from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Telegram API Configuration
# Get these from https://my.telegram.org/apps
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash

# Authentication Options
# Option 1: Set a master password for users to access with credits
MASTER_PASSWORD=your_secure_password_here

# Option 2: Default Claude API key (used when users authenticate with password)
# Get from https://console.anthropic.com/settings/keys
DEFAULT_CLAUDE_API_KEY=sk-ant-your_api_key_here

# Session String (optional, will be generated on first run)
# Save the generated session string here to persist bot sessions
SESSION_STRING=

# Configuration
LOG_LEVEL=INFO
MAX_CONVERSATION_LENGTH=20
SESSION_TIMEOUT_HOURS=24