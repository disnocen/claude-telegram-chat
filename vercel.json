{
  "version": 2,
  "builds": [
    {
      "src": "api/webhook.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.py"
    },
    {
      "src": "/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/webhook.py"
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot-token",
    "API_ID": "@api-id",
    "API_HASH": "@api-hash",
    "MASTER_PASSWORD": "@master-password",
    "DEFAULT_CLAUDE_API_KEY": "@default-claude-api-key",
    "SESSION_STRING": "@session-string",
    "LOG_LEVEL": "INFO",
    "MAX_CONVERSATION_LENGTH": "20",
    "SESSION_TIMEOUT_HOURS": "24"
  }
}